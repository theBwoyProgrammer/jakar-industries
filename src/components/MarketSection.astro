---
interface Props {
  id: string;
  title: string;
  description: string;
  videoSrc: string;
  isFirst?: boolean;
}

const { id, title, description, videoSrc, isFirst = false } = Astro.props;
---

<section id={id} class:list={["market-section", { "market-section--first": isFirst }]}>
  <div class="video-container">
    <video
      muted
      loop
      playsinline
      poster=""
      class="background-video"
      data-market-video
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
    <div class="overlay"></div>
    <div class="vignette"></div>
  </div>

  <div class="content-wrapper">
    <div class="text-content">
      <h2 class="title">{title}</h2>
      <p class="description">{description}</p>
      <a href={`#contact`} class="btn btn--outline">Explore Capability</a>
    </div>
  </div>
</section>

<style>
  .market-section {
    position: relative;
    height: 100vh;
    height: 100svh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000;
    /* Morphing: Simpler start for reliability */
    clip-path: inset(0% 10% 100% 10%);
    transition: clip-path 0.8s var(--ease-out);
    z-index: 10;
  }

  .market-section--visible {
    clip-path: inset(0% 0% 0% 0%);
  }

  .video-container {
    position: absolute;
    inset: 0;
    z-index: 1;
    transform: scale(1.2);
    transition: transform 2s var(--ease-slow);
    filter: brightness(0.4);
  }

  .market-section--visible .video-container {
    transform: scale(1.05);
    filter: brightness(0.6);
  }

  .background-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 2;
  }

  .vignette {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      transparent 0%,
      rgba(0, 0, 0, 0.4) 60%,
      rgba(0, 0, 0, 0.9) 100%
    );
    z-index: 3;
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 10;
    max-width: 1400px;
    width: 100%;
    padding: 0 var(--space-lg);
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .text-content {
    max-width: 900px;
    opacity: 0;
    transform: translateY(50px) scale(0.95);
    transition: all 1.2s var(--ease-slow) 0.3s;
  }

  .market-section--visible .text-content {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .section-tag {
    font-size: 0.7rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.5em;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    display: block;
    opacity: 0.6;
  }

  .title {
    font-size: var(--fs-800);
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    font-weight: 900;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    text-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
  }

  .description {
    font-size: var(--fs-500);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-2xl);
    line-height: 1.6;
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
  }


  @media (max-width: 1024px) {
    .market-section { clip-path: inset(15% 15% 85% 15%); }
    .title { font-size: 3.5rem; }
    .description { font-size: 1.1rem; }
  }

  @media (max-width: 768px) {
    .market-section {
      height: auto;
      min-height: 100svh;
      padding: var(--space-3xl) 0;
      clip-path: inset(0% 0% 0% 0%);
    }
    .market-section--visible { clip-path: inset(0% 0% 0% 0%); }
    .content-wrapper { padding: 0 var(--space-md); }
    .title { font-size: 2.5rem; margin-bottom: var(--space-md); }
    .description { font-size: 1rem; margin-bottom: var(--space-xl); }
    .btn--outline { padding: 1.1rem 2.8rem; width: 100%; max-width: 300px; }
    .text-content { transform: translateY(30px) scale(0.98); }
    .section-tag { letter-spacing: 0.3em; margin-bottom: var(--space-md); }
  }

  @media (max-width: 480px) {
    .title { font-size: 2.2rem; }
    .section-tag { font-size: 0.65rem; letter-spacing: 0.2em; }
  }
</style>
