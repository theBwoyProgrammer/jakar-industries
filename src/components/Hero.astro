---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  backgroundImage?: string;
}

const { title, subtitle, ctaText, ctaHref, backgroundImage } = Astro.props;
---

<section class="hero" style={backgroundImage ? `--hero-bg: url(${backgroundImage})` : undefined}>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {ctaText && ctaHref && (
      <a href={ctaHref} class="hero-cta">{ctaText}</a>
    )}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xl) var(--space-lg);
    background-color: var(--color-dark);
    background-image: var(--hero-bg, none);
    background-size: cover;
    background-position: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
  }

  .hero:not([style*="--hero-bg"]) .hero-overlay {
    background: linear-gradient(135deg, var(--color-dark) 0%, #003366 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    width: 100%;
    text-align: left;
    margin-left: max(0px, calc((100% - 1400px) / 2));
    padding: 0 var(--space-lg);
    animation: heroFadeIn 0.8s var(--ease-out) both;
  }

  @keyframes heroFadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-title {
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    line-height: 1;
  }

  .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    margin-bottom: var(--space-2xl);
    line-height: 1.4;
    max-width: 60ch;
    text-transform: none;
    letter-spacing: normal;
  }

  .hero-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: var(--color-primary);
    color: var(--color-white);
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 2px solid var(--color-primary);
    transition: all 0.3s ease;
  }

  .hero-cta:hover,
  .hero-cta:focus-visible {
    background-color: transparent;
    color: var(--color-white);
    text-decoration: none;
    border-color: var(--color-white);
  }
</style>
