---
interface MarketLink {
  label: string;
  href: string;
}

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  backgroundVideo?: string;
  marketLinks?: MarketLink[];
  isFullScreen?: boolean;
}

const { 
  title, 
  subtitle, 
  backgroundImage, 
  backgroundVideo,
  marketLinks,
  isFullScreen = false
} = Astro.props;
---

<section class={`hero ${isFullScreen ? 'hero--full' : ''}`} style={backgroundImage && !backgroundVideo ? `--hero-bg: url(${backgroundImage})` : undefined}>
  {backgroundVideo && (
    <video
      class="hero-video"
      autoplay
      loop
      muted
      playsinline
    >
      <source src={backgroundVideo} type="video/mp4" />
    </video>
  )}
  <div class="hero-overlay"></div>
  <div class="hero-vignette"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
  </div>

  {marketLinks && marketLinks.length > 0 && (
    <div class="hero-market-nav">
      {marketLinks.map(link => (
        <a href={link.href} class="market-btn">
          {link.label}
        </a>
      ))}
    </div>
  )}

  <div class="hero-scroll-indicator">
    <span>Scroll for more</span>
    <svg class="scroll-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script>
  const heroVideo = document.querySelector('.hero-video');
  const tryPlay = () => {
    if (heroVideo && heroVideo.paused) {
      heroVideo.play().catch(() => {});
    }
  };

  window.addEventListener('load', tryPlay, { passive: true });
  window.addEventListener('touchstart', tryPlay, { passive: true });
  document.addEventListener('visibilitychange', tryPlay, { passive: true });
</script>

<style>
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4xl) var(--space-lg);
    background-color: var(--color-dark);
    background-image: var(--hero-bg, none);
    background-size: cover;
    background-position: center;
    overflow: hidden;
  }

  .hero--full {
    height: auto;
    min-height: 100svh;
    min-height: 100dvh;
  }

  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    transform: scale(1.05);
    filter: brightness(0.7);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 1;
  }

  .hero-vignette {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      transparent 10%,
      rgba(0, 0, 0, 0.6) 80%,
      rgba(0, 0, 0, 0.9) 100%
    );
    z-index: 2;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1400px;
    width: 100%;
    text-align: center;
    padding: 0 var(--space-lg);
    animation: heroReveal 2s var(--ease-slow) both;
  }

  @keyframes heroReveal {
    from {
      opacity: 0;
      transform: translateY(60px) scale(1.02);
      filter: blur(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  }

  .hero-title {
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: -0.01em;
    margin-bottom: var(--space-lg);
    font-size: var(--fs-max);
    font-weight: 900;
    line-height: 0.9;
    text-shadow: 0 20px 80px rgba(0, 0, 0, 0.8);
    text-wrap: balance;
  }

  .hero-subtitle {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--fs-500);
    margin-bottom: var(--space-xl);
    line-height: 1.5;
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
    text-transform: none;
    letter-spacing: -0.01em;
    font-weight: 500;
  }

  .hero-market-nav {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    z-index: 20;
    background-color: transparent;
  }

  .market-btn {
    flex: 1;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    font-weight: 700;
    font-size: 0.62rem;
    letter-spacing: 0.32em;
    border-right: 1px solid rgba(255, 255, 255, 0.08);
    transition: color 0.3s ease, background-color 0.3s ease;
    text-decoration: none;
    position: relative;
    padding: 0 0.75rem;
    text-align: center;
  }

  .market-btn:hover {
    color: var(--color-white);
    background-color: rgba(255, 255, 255, 0.08);
  }

  .market-btn:last-child {
    border-right: none;
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 6rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.35);
    font-size: 0.6rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.35em;
    animation: bounce 4s var(--ease-slow) infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translate(-50%, 0); opacity: 0.3; }
    50% { transform: translate(-50%, 15px); opacity: 0.6; }
  }

  @media (max-width: 1024px) {
    .hero-title { font-size: 4.5rem; }
    .hero-subtitle { font-size: 1.1rem; max-width: 50ch; }
    .hero-scroll-indicator { bottom: 5.5rem; }
  }

  @media (max-width: 768px) {
    .hero {
      padding: calc(var(--space-lg) + 2.9rem) var(--space-md) calc(var(--space-lg) + 7.5rem);
      align-items: flex-start;
      justify-content: flex-start;
    }
    .hero-content { margin-top: 0; padding: 0 var(--space-md); }
    .hero-title { font-size: 3rem; margin-bottom: var(--space-md); letter-spacing: 0.28em; }
    .hero-subtitle { font-size: 0.95rem; margin-bottom: var(--space-md); max-width: 44ch; }

    .hero-market-nav {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      flex-wrap: wrap;
      background-color: transparent;
      backdrop-filter: none;
    }
    
    .market-btn {
      flex: 1 1 50%;
      height: 52px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      font-size: 0.58rem;
      letter-spacing: 0.28em;
    }
    
    .market-btn:nth-child(2n) { border-right: none; }
    .market-btn:hover { background-color: rgba(255, 255, 255, 0.08); }
    .hero-scroll-indicator { display: flex; bottom: 8.5rem; }
  }

  @media (max-width: 480px) {
    .hero { padding-top: calc(var(--space-md) + 2.9rem); padding-bottom: calc(var(--space-lg) + 7.25rem); }
    .hero-title { font-size: 2.45rem; line-height: 1.05; letter-spacing: 0.26em; }
    .hero-subtitle { font-size: 0.9rem; }
    .market-btn { flex: 1 1 100%; border-right: none; }
    .hero-scroll-indicator { bottom: 14.5rem; }
  }
</style>
