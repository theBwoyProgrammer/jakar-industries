---
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-grid">
      <div class="footer-col">
        <h3 class="footer-heading">Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/what-we-build">What We're Building</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h3 class="footer-heading">Reach Us</h3>
        <p><a href="/contact">Contact form</a> · <a href="mailto:info@jakarindustries.com">info@jakarindustries.com</a></p>
      </div>
      <div class="footer-col">
        <h3 class="footer-heading">Legal</h3>
        <ul class="footer-links">
          <li><a href="#">Privacy</a></li>
          <li><a href="#">Terms</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>© {year} Jakar Industries</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-dark);
    color: var(--color-white);
    margin-top: auto;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-lg) var(--space-lg);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-2xl);
    margin-bottom: var(--space-2xl);
  }

  .footer-heading {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-md);
    color: rgba(255, 255, 255, 0.9);
  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: var(--space-sm);
  }

  .footer-links a,
  .footer-col a {
    color: rgba(255, 255, 255, 0.85);
  }

  .footer-links a:hover,
  .footer-col a:hover {
    color: var(--color-white);
    text-decoration: none;
  }

  .footer-col p {
    margin: 0;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.85);
  }

  .footer-bottom {
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    text-align: center;
  }

  .footer-bottom p {
    margin: 0;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }
</style>
