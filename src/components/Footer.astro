---
const year = new Date().getFullYear();
---
<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-brand">
      <img src="/favicon.png" alt="" class="footer-logo-icon" />
      <span class="footer-name">JAKAR INDUSTRIES</span>
    </div>
    
    <nav class="footer-nav">
      <ul class="footer-links">
        <li><a href="#defense">Defense Ops</a></li>
        <li><a href="#first-responders">Public Safety</a></li>
        <li><a href="#innovation">Innovation</a></li>
        <li><a href="mailto:info@jakarindustries.com">Contact</a></li>
      </ul>
    </nav>

    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>Â© {year} Jakar Industries. Pushing frontiers in mission technology.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #000000;
    color: var(--color-white);
    margin-top: auto;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }

  .footer-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-4xl) var(--space-lg) var(--space-2xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: var(--space-3xl);
  }

  .footer-logo-icon {
    height: 54px;
    width: auto;
    filter: brightness(0) invert(1) drop-shadow(0 0 15px rgba(255, 255, 255, 0.1));
  }

  .footer-name {
    font-family: var(--font-display);
    font-weight: 800;
    font-size: 1.25rem;
    letter-spacing: 0.4em;
    color: var(--color-white);
  }

  .footer-nav {
    margin-bottom: var(--space-3xl);
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 3rem;
    padding: 0;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.6);
    font-family: var(--font-sans);
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    transition: color 0.4s ease, transform 0.4s ease;
  }

  .footer-links a:hover {
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .footer-bottom {
    width: 100%;
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-copyright p {
    margin: 0;
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .footer-inner {
      padding: var(--space-3xl) var(--space-md) var(--space-xl);
    }
    .footer-links {
      gap: 1.5rem 2rem;
    }
    .footer-logo-img {
      height: 45px;
    }
    .footer-name {
      font-size: 1rem;
      letter-spacing: 0.3em;
    }
  }
</style>
