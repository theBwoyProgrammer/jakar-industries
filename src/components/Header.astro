<header class="site-header" id="site-header">
  <div class="header-inner">
    <div class="header-left">
      <a href="/" class="logo" aria-label="Jakar Industries Home">
        <img src="/favicon.png" alt="" class="logo-icon" />
        <span class="logo-text">JAKAR INDUSTRIES</span>
      </a>
    </div>
    
    <div class="header-center">
      <!-- Center space kept for minimalist balance -->
    </div>

    <div class="header-right">
      <div class="search-container" id="search-container">
        <button class="search-trigger" id="search-trigger" aria-label="Open search">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
        <input type="text" class="search-input" id="search-input" placeholder="Search mission solutions..." />
      </div>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  const searchContainer = document.getElementById('search-container');
  const searchTrigger = document.getElementById('search-trigger');
  const searchInput = document.getElementById('search-input');

  // Header scroll effect
  if (header) {
    const updateHeader = () => {
      if (window.scrollY > 50) {
        header.classList.add('site-header--scrolled');
      } else {
        header.classList.remove('site-header--scrolled');
      }
    };
    window.addEventListener('scroll', updateHeader);
    updateHeader();
  }

  // Search expansion logic
  if (searchContainer && searchInput && searchTrigger) {
    let isFocused = false;

    const expand = () => {
      searchContainer.classList.add('search-container--expanded');
    };

    const collapse = () => {
      if (!isFocused) {
        searchContainer.classList.remove('search-container--expanded');
      }
    };

    searchContainer.addEventListener('mouseenter', expand);
    searchContainer.addEventListener('mouseleave', collapse);

    searchInput.addEventListener('focus', () => {
      isFocused = true;
      expand();
    });

    searchInput.addEventListener('blur', () => {
      isFocused = false;
      // Slight delay to check if mouse is also gone
      setTimeout(collapse, 100);
    });

    // Mobile click handler
    searchTrigger.addEventListener('click', (e) => {
      e.stopPropagation();
      if (!searchContainer.classList.contains('search-container--expanded')) {
        expand();
        searchInput.focus();
      } else {
        isFocused = false;
        collapse();
        searchInput.blur();
      }
    });

    // Prevent collapse when clicking inside
    searchContainer.addEventListener('click', (e) => {
      e.stopPropagation();
    });

    // Global click to collapse if not focused
    document.addEventListener('click', () => {
      if (!isFocused) collapse();
    });
  }
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: transparent;
    color: var(--color-white);
    transition: background-color 0.3s ease, padding 0.3s ease;
  }

  .site-header--scrolled {
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(12px);
  }

  .header-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem var(--space-lg);
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: var(--space-lg);
  }

  .header-left {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .header-center {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--color-white);
    transition: transform 0.3s var(--transition);
  }

  .logo-icon {
    height: 48px;
    width: auto;
    display: block;
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.4));
  }

  .logo-text {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 1.1rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    white-space: nowrap;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .logo-icon {
      height: 36px;
    }
    .logo-text {
      font-size: 0.9rem;
      letter-spacing: 0.1em;
    }
  }

  .logo:hover {
    transform: scale(1.02);
  }

  /* Search Styles */
  .search-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 100px;
    padding: 0;
    transition: width 0.5s cubic-bezier(0.33, 1, 0.68, 1), background 0.3s ease;
    width: 44px;
    height: 44px;
    overflow: visible;
    position: relative;
    z-index: 150;
  }
  .search-container--expanded {
    width: 300px;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    overflow: hidden;
    padding-left: 0.5rem;
    justify-content: flex-start;
  }

  .search-trigger {
    background: transparent;
    border: none;
    color: var(--color-white);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    width: 44px;
    height: 44px;
    flex-shrink: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    z-index: 2;
  }

  .search-trigger:hover {
    opacity: 0.8;
  }

  .search-input {
    background: transparent;
    border: none;
    color: var(--color-white);
    font-size: 0.85rem;
    padding: 0;
    width: 0;
    opacity: 0;
    transition: width 0.5s cubic-bezier(0.33, 1, 0.68, 1), opacity 0.3s ease, padding 0.3s ease;
    outline: none;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
  }

  .search-container--expanded .search-input {
    width: 220px;
    opacity: 1;
    padding: 0 1rem;
  }

  @media (max-width: 767px) {
    .header-inner {
      grid-template-columns: 1fr auto;
      padding: 0.75rem var(--space-md);
      gap: 1rem;
    }
    
    .header-right {
      display: flex;
      justify-content: flex-end;
    }

    .header-center {
      display: none;
    }

    .logo-img {
      height: 40px;
    }

    .search-container--expanded {
      width: clamp(200px, 60vw, 280px);
      position: absolute;
      right: var(--space-md);
      top: 50%;
      transform: translateY(-50%);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    }
    
    .search-container {
      width: 40px;
      height: 40px;
    }
    
    .search-trigger {
      width: 40px;
      height: 40px;
    }
    
    .search-input {
      font-size: 0.9rem;
    }
  }
</style>
