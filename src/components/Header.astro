<header class="site-header" id="site-header">
  <div class="header-inner">
    <div class="header-left">
      <a href="/" class="logo" aria-label="Jakar Industries Home">
        <img src="/favicon.png" alt="" class="logo-icon" />
        <span class="logo-text">JAKAR INDUSTRIES</span>
      </a>
    </div>
    
    <div class="header-center">
      <nav class="main-nav">
        <a href="/about">About</a>
        <a href="/capabilities">Capabilities</a>
        <a href="/solutions">Solutions</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>

    <div class="header-right">
      <div class="search-container" id="search-container">
        <button class="search-trigger" id="search-trigger" aria-label="Open search">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
        <input type="text" class="search-input" id="search-input" placeholder="Search..." />
        <div class="search-results" id="search-results"></div>
      </div>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  const searchContainer = document.getElementById('search-container');
  const searchTrigger = document.getElementById('search-trigger');
  const searchInput = document.getElementById('search-input');

  // Header scroll effect
  if (header) {
    const updateHeader = () => {
      if (window.scrollY > 50) {
        header.classList.add('site-header--scrolled');
      } else {
        header.classList.remove('site-header--scrolled');
      }
    };
    window.addEventListener('scroll', updateHeader);
    updateHeader();
  }

  // Search expansion and functionality
  if (searchContainer && searchInput && searchTrigger) {
    let isFocused = false;
    const searchResults = document.getElementById('search-results');

    // Searchable content
    const searchableContent = [
      { title: 'Defense Operations', url: '#defense' },
      { title: 'First Responders', url: '#first-responders' },
      { title: 'Systems Support', url: '#systems-support' },
      { title: 'Innovation & AI', url: '#innovation' },
      { title: 'Contact Us', url: '#contact' },
    ];

    const renderResults = (items) => {
      if (!searchResults) return;
      searchResults.classList.add('search-results--visible');
      
      if (items.length > 0) {
        searchResults.innerHTML = items.map(item => 
          `<a href="${item.url}" class="search-result-item" data-url="${item.url}">${item.title}</a>`
        ).join('');
        
        // Add click handlers to results
        searchResults.querySelectorAll('.search-result-item').forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const url = link.getAttribute('data-url');
            const target = document.querySelector(url);
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
              collapse();
              searchInput.value = '';
            }
          });
        });
      } else {
        searchResults.innerHTML = '<div class="search-no-results">Keyword not found</div>';
      }
    };

    const expand = () => {
      searchContainer.classList.add('search-container--expanded');
    };

    const collapse = () => {
      if (!isFocused) {
        searchContainer.classList.remove('search-container--expanded');
        if (searchResults) {
          searchResults.innerHTML = '';
          searchResults.classList.remove('search-results--visible');
        }
      }
    };

    searchInput.addEventListener('focus', () => {
      isFocused = true;
      expand();
    });

    searchInput.addEventListener('blur', () => {
      isFocused = false;
      setTimeout(collapse, 300);
    });

    // Search functionality - filter as user types
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase().trim();
      
      if (!query) {
        // Clear results if empty
        if (searchResults) {
          searchResults.innerHTML = '';
          searchResults.classList.remove('search-results--visible');
        }
        return;
      }

      const results = searchableContent.filter(item => 
        item.title.toLowerCase().includes(query)
      );

      renderResults(results);
    });

    // Mobile click handler
    searchTrigger.addEventListener('click', (e) => {
      e.stopPropagation();
      if (!searchContainer.classList.contains('search-container--expanded')) {
        expand();
        searchInput.focus();
      } else {
        isFocused = false;
        collapse();
        searchInput.blur();
      }
    });

    searchContainer.addEventListener('click', (e) => {
      e.stopPropagation();
    });

    // Prevent closing when clicking inside results
    if (searchResults) {
      searchResults.addEventListener('mousedown', (e) => {
        e.preventDefault();
      });
    }

    document.addEventListener('click', () => {
      if (!isFocused) collapse();
    });
  }
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: transparent;
    color: var(--color-white);
    transition: background-color 0.3s ease, padding 0.3s ease;
  }

  .site-header--scrolled {
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(12px);
  }

  .header-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem var(--space-lg);
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: var(--space-lg);
  }

  .header-left {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .header-center {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .main-nav {
    display: flex;
    gap: var(--space-2xl);
  }

  .main-nav a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: var(--fs-500);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
    position: relative;
  }

  .main-nav a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #0087ca;
    transition: width 0.3s ease;
  }

  .main-nav a:hover {
    color: var(--color-white);
  }

  .main-nav a:hover::after {
    width: 100%;
  }

  .header-right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--color-white);
    transition: transform 0.3s var(--transition);
  }

  .logo-icon {
    height: 56px;
    width: auto;
    display: block;
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.4));
  }

  .logo-text {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 1.1rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    white-space: nowrap;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .logo-icon {
      height: 44px;
    }
    .logo-text {
      font-size: 0.95rem;
      letter-spacing: 0.1em;
    }
  }

  @media (max-width: 520px) {
    .header-inner {
      grid-template-columns: minmax(0, 1fr) auto;
    }

    .logo-icon {
      height: 40px;
    }

    .logo-text {
      font-size: 0.8rem;
      letter-spacing: 0.08em;
      white-space: normal;
      line-height: 1.1;
      max-width: 160px;
    }
  }

  .logo:hover {
    transform: scale(1.02);
  }

  /* Search Styles */
  .search-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 0;
    transition: width 0.5s cubic-bezier(0.33, 1, 0.68, 1), background 0.3s ease, border-color 0.3s ease;
    width: 44px;
    height: 44px;
    overflow: visible;
    position: relative;
    z-index: 150;
  }
  .search-container--expanded {
    width: 300px;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    overflow: visible;
    justify-content: flex-start;
  }

  .search-trigger {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    color: var(--color-white);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    width: 44px;
    height: 44px;
    flex-shrink: 0;
    transition: transform 0.3s ease, background 0.3s ease, border-color 0.3s ease;
    z-index: 2;
  }

  .search-trigger:hover {
    transform: scale(1.1);
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .search-input {
    background: transparent;
    border: none;
    color: var(--color-white);
    font-size: 0.85rem;
    padding: 0;
    width: 0;
    opacity: 0;
    transition: width 0.5s cubic-bezier(0.33, 1, 0.68, 1), opacity 0.3s ease, padding 0.3s ease;
    outline: none;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
  }

  .search-container--expanded .search-input {
    width: 220px;
    opacity: 1;
    padding: 0 1rem;
    margin-left: 0.25rem;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    right: 0;
    background: transparent;
    backdrop-filter: none;
    border: none;
    border-radius: 8px;
    overflow: hidden;
    max-height: 300px;
    overflow-y: auto;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    gap: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .search-results--visible {
    opacity: 1;
    pointer-events: auto;
  }

  .search-result-item {
    display: block;
    padding: 0.85rem 1rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.85rem;
    transition: background 0.2s ease, color 0.2s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-item:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
  }

  .search-no-results {
    padding: 1rem;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.85rem;
    text-align: center;
  }

  @media (max-width: 767px) {
    .header-inner {
      grid-template-columns: 1fr auto;
      padding: 0.75rem var(--space-md);
      gap: 1rem;
    }
    
    .header-center {
      display: none;
    }
    
    .header-right {
      display: flex;
      justify-content: flex-end;
    }

    .header-center {
      display: none;
    }

    .logo-img {
      height: 40px;
    }

    .search-container--expanded {
      width: clamp(200px, 60vw, 280px);
      position: relative;
      right: auto;
      top: auto;
      transform: none;
      box-shadow: none;
      overflow: visible;
      max-width: calc(100vw - 2 * var(--space-md));
      min-width: 200px;
      margin-left: auto;
    }
    
    .search-container {
      width: 40px;
      height: 40px;
    }
    
    .search-trigger {
      width: 40px;
      height: 40px;
    }
    
    .search-input {
      font-size: 0.9rem;
      min-width: 160px;
    }

    .search-results {
      width: 100%;
      max-width: none;
    }

    .search-result-item {
      font-size: 0.8rem;
      padding: 0.75rem 0.85rem;
    }
  }
</style>
