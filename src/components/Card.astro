---
interface Props {
  title: string;
  description: string;
  href?: string;
  image?: string;
}

const { title, description, href, image } = Astro.props;
---

<article class="card" style={image ? `--card-bg: url(${image})` : undefined}>
  {image && <div class="card-image"></div>}
  <div class="card-body">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    {href && (
      <a href={href} class="card-link">Learn more</a>
    )}
  </div>
</article>

<style>
  .card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .card-image {
    height: 180px;
    background-color: var(--color-dark);
    background-image: var(--card-bg, none);
    background-size: cover;
    background-position: center;
  }

  .card-body {
    padding: var(--space-xl);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    color: var(--color-dark);
    margin-bottom: var(--space-sm);
    font-size: 1.25rem;
  }

  .card-description {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: var(--space-md);
    flex: 1;
  }

  .card-link {
    font-weight: 600;
    color: var(--color-primary);
    margin-top: auto;
  }

  .card-link:hover {
    text-decoration: none;
    opacity: 0.9;
  }
</style>
