---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
  cta?: string;
}

const { title, description, href, image, cta = 'Explore capabilities' } = Astro.props;
---

<a href={href} class="capability-card">
  <div class="capability-card__image-container">
    <div class="capability-card__image" style={`background-image: url(${image})`}></div>
  </div>
  <div class="capability-card__content">
    <span class="capability-card__tag">Mission Capability</span>
    <h3 class="capability-card__title">{title}</h3>
    <p class="capability-card__desc">{description}</p>
    <span class="capability-card__cta">{cta}<span aria-hidden="true" class="arrow"> â†’</span></span>
  </div>
</a>

<style>
  .capability-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: var(--color-white);
    border: 1px solid #eee;
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.3s ease;
  }

  .capability-card:hover {
    text-decoration: none;
    border-color: var(--color-primary);
  }

  .capability-card__image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .capability-card__image {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    transition: transform 0.6s var(--ease-out);
  }

  .capability-card:hover .capability-card__image {
    transform: scale(1.05);
  }

  .capability-card__content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .capability-card__tag {
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    display: block;
  }

  .capability-card__title {
    font-size: 1.25rem;
    font-weight: 800;
    color: #000;
    margin: 0 0 1rem;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -0.01em;
  }

  .capability-card__desc {
    font-size: 0.95rem;
    color: #555;
    margin: 0 0 2rem;
    line-height: 1.6;
    flex: 1;
    text-transform: none;
    letter-spacing: normal;
  }

  .capability-card__cta {
    font-size: 0.8rem;
    font-weight: 800;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s ease;
  }

  .capability-card__cta .arrow {
    font-size: 1.1rem;
    transition: transform 0.3s ease;
  }

  .capability-card:hover .capability-card__cta {
    color: var(--color-primary);
  }

  .capability-card:hover .capability-card__cta .arrow {
    transform: translateX(4px);
  }

  .capability-card:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }
</style>
