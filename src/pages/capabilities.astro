</BaseLayout>

<style>
  .capabilities-intro {
    background-color: var(--color-dark);
    color: var(--color-white);
    padding: var(--space-4xl) var(--space-lg);
    text-align: center;
  }

  .capabilities-intro h2 {
    font-size: var(--fs-800);
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .intro-text {
    font-size: var(--fs-600);
    color: rgba(255, 255, 255, 0.8);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .capability-grid {
    background-color: #000;
    color: var(--color-white);
    padding: var(--space-4xl) var(--space-lg);
  }

  .capabilities {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
  }

  .capability-card {
    background: rgba(0, 135, 202, 0.08);
    border: 1px solid rgba(0, 135, 202, 0.2);
    padding: var(--space-2xl);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .capability-card:hover {
    background: rgba(0, 135, 202, 0.15);
    border-color: rgba(0, 135, 202, 0.4);
    transform: translateY(-4px);
  }

  .capability-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .capability-header h3 {
    font-size: var(--fs-600);
    color: #0087ca;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .capability-icon {
    font-size: 2rem;
  }

  .capability-card p {
    font-size: var(--fs-500);
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .tech-list {
    list-style: none;
    padding: 0;
  }

  .tech-list li {
    font-size: var(--fs-500);
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: rgba(255, 255, 255, 0.6);
  }

  .tech-list li::before {
    content: "‚ñ∏";
    position: absolute;
    left: 0;
    color: #0087ca;
  }

  .platforms {
    background-color: var(--color-dark);
    color: var(--color-white);
    padding: var(--space-4xl) var(--space-lg);
  }

  .platforms h2 {
    font-size: var(--fs-800);
    margin-bottom: var(--space-3xl);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
  }

  .platform-card {
    margin-bottom: var(--space-3xl);
    padding: var(--space-3xl);
    border-radius: 8px;
    background: rgba(0, 135, 202, 0.05);
    border-left: 4px solid #0087ca;
  }

  .platform-content h3 {
    font-size: var(--fs-700);
    margin-bottom: var(--space-md);
    color: #0087ca;
  }

  .platform-content p {
    font-size: var(--fs-600);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .platform-specs {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .spec {
    background: rgba(0, 135, 202, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: var(--fs-500);
    color: rgba(255, 255, 255, 0.9);
  }

  .certifications {
    background-color: #000;
    color: var(--color-white);
    padding: var(--space-4xl) var(--space-lg);
    text-align: center;
  }

  .certifications h2 {
    font-size: var(--fs-800);
    margin-bottom: var(--space-3xl);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cert-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--space-lg);
  }

  .cert-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl);
    border: 2px solid rgba(0, 135, 202, 0.3);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .cert-item:hover {
    border-color: #0087ca;
    background: rgba(0, 135, 202, 0.1);
  }

  .cert-badge {
    font-size: var(--fs-600);
    font-weight: 900;
    color: #0087ca;
    margin-bottom: var(--space-sm);
  }

  .cert-name {
    font-size: var(--fs-500);
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    .capabilities {
      grid-template-columns: 1fr;
    }

    .cert-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-md);
    }

    .capabilities-intro,
    .capability-grid,
    .platforms,
    .certifications {
      padding: var(--space-3xl) var(--space-md);
    }

    .capability-card,
    .platform-card,
    .cert-item {
      padding: var(--space-lg);
    }
  }
</style>
