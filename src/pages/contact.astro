---
import BaseLayout from '../components/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Contact — Jakar Industries" description="Get in touch with Jakar Industries. Use our contact form or reach us by email.">
  <Hero title="Get in Touch" subtitle="We'd like to hear from you." />
  <script>
    document.getElementById('contact-form')?.addEventListener('submit', () => {
      const btn = document.getElementById('contact-submit');
      if (btn) {
        btn.disabled = true;
        btn.textContent = 'Sending…';
      }
    });
  </script>
  <section class="section">
    <div class="contact-grid">
      <div class="contact-form-wrap">
        <h2>Send us a message</h2>
        <form class="contact-form" action="https://formspree.io/f/xqeeblpq" method="POST" id="contact-form">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" autocomplete="name" required placeholder="Your name" />
          <label for="email">Email</label>
          <input type="email" id="email" name="email" autocomplete="email" required placeholder="you@example.com" />
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" autocomplete="off" placeholder="How can we help?" />
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required placeholder="Your message..."></textarea>
          <button type="submit" class="btn btn--primary" id="contact-submit">Submit</button>
        </form>
      </div>
      <div class="contact-fallback">
        <h2>Other ways to reach us</h2>
        <p><strong>Email:</strong> <a href="mailto:info@jakarindustries.com">info@jakarindustries.com</a></p>
        <p><strong>Address:</strong><br /><span class="placeholder">[Your address here]</span></p>
        <p><strong>Phone:</strong> <span class="placeholder">[Your phone here]</span></p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  @media (max-width: 767px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-form-wrap h2,
  .contact-fallback h2 {
    margin-bottom: var(--space-lg);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .contact-form label {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .contact-form input,
  .contact-form textarea {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid #ccc;
    border-radius: var(--radius);
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .contact-form .btn {
    align-self: flex-start;
    margin-top: var(--space-sm);
  }

  .contact-fallback p {
    margin-bottom: var(--space-md);
  }

  .contact-fallback a {
    color: var(--color-primary);
  }

  .contact-fallback .placeholder {
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
